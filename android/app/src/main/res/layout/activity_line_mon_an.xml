<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="10dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/imgMonAn_DM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/meo_meo"
                android:scaleType="centerCrop">
            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgMonAn_DM"
                android:layout_alignRight="@+id/imgMonAn_DM"
                android:background="#FF0000"
                android:padding="3dp"
                android:visibility="visible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="New"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="80"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTenMonAn_DM"
                android:ellipsize="end"
                android:maxLines="1"
                android:textFontWeight="100"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MÃ¨o"></TextView>
            <TextView
                android:id="@+id/txtMoTaMonAn_DM"
                android:ellipsize="end"
                android:maxLines="3"
                android:textFontWeight="100"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/ckoMonAn_DM"
                android:layout_gravity="right"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:checked="false"
                app:useMaterialThemeColors="false"
                android:button="@drawable/ic_kh_tim"></com.google.android.material.checkbox.MaterialCheckBox>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>