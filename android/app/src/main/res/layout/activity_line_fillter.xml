<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/ckoFillter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dont_checked_fillter"
                android:button="@drawable/delete_border_checked"
                android:checked="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="Nướng"></com.google.android.material.checkbox.MaterialCheckBox>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnlChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ckoFillter"
            android:layout_alignRight="@+id/ckoFillter"
            android:background="@drawable/checked_v_fillter"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=" v "></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtIdLoaiMonAnFillter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:visibility="invisible">
    </TextView>
</LinearLayout>